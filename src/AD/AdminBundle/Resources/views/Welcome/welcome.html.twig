{# src/AD/AdminBundle/Resources/views/Default/index.html.twig #}

{% extends "ADAdminBundle::layout.html.twig" %}

{# {% form_theme form 'bootstrap_3_layout.html.twig' %} #}

{%block body %}
    <div class="container">
        <div class="jumbotron text-center">
            <h2>Welcome in Aude's University</h2>
        </div>

        <div>
            {{ form_start(form, {'attr': {'class': 'form-inline'} } ) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            <button type="submit" class="btn btn-primary">Sign In</button>
            {{ form_end(form) }}
        </div>
        <div class="col-sm-8">

            <img src="/images/Students_studying.jpeg" alt="Students studying" class="img-responsive">

        </div>
        <div class="col-sm-4">
            <img src="/images/aude_logo.png" alt="logo" class="thumbnail" width="30%">

        </div>
    </div>
{% endblock %}