{# empty Twig template #}
{% extends "ADLearningBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="jumbotron text-center">
            <h2>Course {{ course.courseName }}</h2>
        </div>

        <div class='row'>
            <div class="col-sm-6">
                {{ course.description }}
            </div>

            <div class="col-sm-6">
                <ul class="list-group">
                    {% for module in modules%}
                        <li class="list-group-item">{{ module.moduleName }}</li>
                        {% endfor %}
                </ul>
            </div>

        </div>

    </div>

{% endblock %}