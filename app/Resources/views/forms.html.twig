{%- block form_row -%}
<div class="form-group {{ errors|length > 0 ? 'error' : '' }}">
    {{- form_label(form) }}
    {{- form_widget(form, {'attr': {'class': 'form-control'} }) -}}
    {{- form_errors(form) }}
</div>
{%- endblock form_row -%}

{%- block form_errors -%}
{%- if errors|length > 0 -%}
<span class="help-inline">
    {%- for error in errors -%}
    {{ error.message }}
    {%- endfor -%}
</span>
{%- endif -%}
{%- endblock form_errors -%}